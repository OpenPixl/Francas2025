{% extends 'admin.html.twig' %}

{% block title %}OpenGaia - Ajout utilisateur{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ include('admin/dashboard/include/header.html.twig', {
        'title' : 'Gestions des utilisateurs',
        'btns' : {
            'new': {
                'id' : null,
                'href' : path('op_admin_user_new'),
                'icon' : '<i class="fa-duotone fa-solid fa-square-plus"></i>',
                'text' : 'Créer un nouvel utiisateur',
                'array':null
            },
            'return': {
                'id' : null,
                'href' : path('op_admin_user_index'),
                'icon' : '<i class="fa-duotone fa-solid fa-chevrons-left"></i>',
                'text' : 'Retour',
                'array':null
            }
        }
    }) }}
{% endblock %}

{% block main %}

    <section id="op_admin_content_body">

        <h2 class="font-normal uppercase text-xl text-sky-700">Liste des membres du site</h2>
        <p class="text-sm font-light">Créer, Modifier ou supprimer des utilisateurs du site.</p>

        <div class="mt-3" id="liste">
            {{ include('admin/user/include/_liste.html.twig') }}
        </div>

        <div class="mt-3">
            {# Ajout du template personnalisé pour la pagination en fin du block #}
            {{ knp_pagination_render(users, 'include/pagination.html.twig') }}
        </div>

    </section>
{% endblock %}
