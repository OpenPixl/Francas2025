<div class="grid grid-cols-4 gap-4">
    {% for ressource in ressources %}
        <a href="{{ path('op_webapp_ressources_ressourceshow', {'slug': ressource.slug, 'page': page}) }}" class="group">
            {% if ressource.imageName %}
                <img src="{{ asset('/uploads/images/ressources/'~ressource.imageName)}}" alt="{{ressource.imageName}}" class="aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75 xl:aspect-7/8"/>
            {% else %}
            {% endif %}
            <h3 class="mt-3 text-sm text-[#d84519]">{{ ressource.name }}</h3>
        </a>
    {% endfor %}
</div>
