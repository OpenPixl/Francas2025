<table class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
    <thead>
        <tr>
            <th class="px-1 py-1.5"></th>
            <th class="px-1 text-start">Titre de l'article</th>
            <th class="px-1 text-start"></th>
            <th class="px-1 text-start">Publi√© le</th>
            <th class="px-1 text-center">...</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-white/10">
    {% for article in articles %}
        <tr class="hover:bg-gray-100">
            <td class="px-1 py-1.5 text-sm whitespace-nowrap text-gray-800 dark:text-gray-400">
                {% if article.imageName is null %}
                    <img src="{{ asset('uploads/images/fixes/img_article_none.png') }}" alt="avatar de l'image de l'article" class="h-8 object-cover rounded-sm">
                {% else %}
                    <img src="{{ asset('uploads/images/articles/' ~ article.imageName) }}" alt="avatar de l'image de l'article" class="h-8 object-cover rounded-sm">
                {% endif %}
            </td>
            <td class="py-1.5 text-sm whitespace-nowrap text-gray-800 dark:text-gray-400">
                <p class="px-1 font-semibold text-slate-900 text-sm">{{ article.title }}</p>
                <p>
                    <span class="inline-flex items-center gap-x-1.5 rounded-full px-2 py-1 text-xs font-normal text-gray-900 inset-ring inset-ring-gray-200 dark:text-gray-200 dark:inset-ring-white/10">
                        <svg viewBox="0 0 6 6" aria-hidden="true" class="size-1.5 fill-red-500 dark:fill-red-400">
                            <circle r="3" cx="3" cy="3" />
                        </svg>
                        {{ article.theme }}
                    </span>

                </p>
            </td>
            <td class="py-1.5 text-sm whitespace-nowrap text-gray-800 dark:text-gray-400">
                <p class="text-slate-900 text-sm">{{ article.content|u.truncate(20, ' ...') | striptags }}</p>
            </td>
            <td class="py-1.5 text-sm whitespace-nowrap text-gray-800 dark:text-gray-400">
                <p class="text-slate-900 text-sm">{{ article.updatedAt|date('d-m-Y') }}</p>
            </td>
            <td class="py-1.5 text-sm whitespace-nowrap text-gray-800 dark:text-gray-400 text-center">
                <a href="{{ path('op_webapp_articles_edit', {'id' : article.id}) }}"><i class="far fa-edit"></i></a> |
                {% if app.request.attributes.get('_route') == 'op_espcoll_articles_bycollege' %}
                    <a class="btnArchived" href="{{ path('op_webapp_articles_archived', {'id': article.id, 'idcollege': article.college.id}) }}"><i class="fa fa-eraser"></i></a>
                {% else %}
                    <a class="btnArchived" href="{{ path('op_webapp_articles_archived', {'id': article.id, 'idcollege': idcollege}) }}"><i class="fa fa-eraser"></i></a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
