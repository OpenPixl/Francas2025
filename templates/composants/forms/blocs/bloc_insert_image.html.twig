{% if entity_name is not null %}
    <div class="my-1 flex flex-row justify-between">
        <label for="{{ form.vars.id }}" class="block {{ legend_width }} text-sm my-1 text-slate-700">
            {{ label }}
        </label>
        <div class="{{ col_width }} border-[1px] border-dashed border-gray-300 rounded-lg  text-sm flex flex-row justify-between px-2 py-1 my-1">
            <div class="text-slate-600 text-xs flex flex-row items-center">
                {% if url_file is defined %}
                    <img src="{{ asset(url_file ~ entity_name ) }}" alt="" class="h-24 rounded-sm">
                {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12" />
                    </svg>
                {% endif %}
            </div>
            <div class="flex items-center">
                <p>{{ entity_name }}</p>
            </div>
            <div class="text-gray-600 text-xs flex items-center">
                <a href="{{ path(routename, {'id': entity_id }) }}" class="openModalWarning" data-tw-content="DEL_CI">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </a>
            </div>
        </div>
        <div class="hidden">
            {{ form_widget(form, {'attr': {'class': 'w-full text-sm bg-white text-slate-900 border-solid border-[1px] border-gray-300 rounded px-2 py-1 file:mr-4 file:py-1 file:px-2 file:rounded-s file:border-0 file:text-sm file:font-semibold file:bg-gray-300 file:text-gray-800 hover:file:bg-gray-100 active:file:bg-gray-100"'}}) }}
        </div>
    </div>
{% else %}
    <div class="my-1 flex flex-row justify-between">
        <label for="{{ form.vars.id }}" class="block {{ legend_width }} text-sm my-1 text-slate-700">
            {{ label }}
        </label>
        <div class="{{ col_width }}">
            {{ form_widget(form, {'attr': {'class': input_width ~ '  text-sm bg-white text-slate-900 border-solid border-[1px] border-gray-300 rounded file:mr-4 file:py-1 file:px-2 file:rounded-s file:border-0 file:text-sm file:font-semibold file:bg-gray-300 file:text-gray-800 hover:file:bg-gray-100 active:file:bg-gray-100"'}}) }}
        </div>
        {% if suppr_file is defined %}
        <div class="hidden">
            {{ form_widget(suppr_file) }}
        </div>
        {% endif %}
    </div>
{% endif %}
